<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">

    <TextView
        android:id="@+id/totalCnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Questions Solved: "
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Mixed Problems Solved: "
        android:gravity="center_horizontal"
        android:id="@+id/testCnt"
        android:textStyle="bold"
        android:layout_below="@+id/totalCnt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Binary Problems Solved: "
        android:gravity="center_horizontal"
        android:id="@+id/binCnt"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/testCnt"
        android:layout_alignStart="@+id/testCnt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Hex Problems Solved: "
        android:gravity="center_horizontal"
        android:id="@+id/hexCnt"
        android:paddingBottom="24dp"
        android:layout_below="@+id/binCnt"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        style="@style/blue_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hexCnt"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ripple_button"
            android:text="Practice now!"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:id="@+id/praticebutton" />

    </FrameLayout>

</RelativeLayout>