<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">

    <TextView
        android:id="@+id/totalCnt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Questions Solved: "
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Both Problems Solved: "
        android:id="@+id/testCnt"
        android:textStyle="bold"
        android:layout_below="@+id/totalCnt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Binary Problems Solved: "
        android:id="@+id/binCnt"
        android:layout_below="@+id/testCnt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Hex Problems Solved: "
        android:id="@+id/hexCnt"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/binCnt"
        android:layout_alignParentLeft="true"
        android:paddingBottom="6dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/blue_button"
        android:text="Practice now!"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:id="@+id/praticebutton"
        android:layout_below="@+id/hexCnt"
        android:layout_alignParentStart="true" />

</RelativeLayout>